<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div class="comment-content" id="this_comment_<%= comment.id %>">
        <p><%= comment.content %></p>
        <div class="comment-actions">
          <%= link_to "コメント編集", edit_flower_comment_path(flower, comment), remote: true, class: "comment-action-link" %>
          <%= link_to "コメント削除", flower_comment_path(comment.flower_id, comment.id), method: :delete, remote: true,
                                      data: { confirm: "本当に削除しますか?"}, class: "comment-action-link" %>
        </div>
      </div>
    <% end %>
  <% end %>
</ul>