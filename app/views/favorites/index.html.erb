<table>
  <thead>
    <tr>
      <th>UserName</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <body>
  <ul>
  <% @favorites.each do |favorite| %>
    <tr>
      <td><%= favorite.user.name %></td>
      <td><%= favorite.name %></td>
      <td><%= favorite.description %></td>
      <td><% if favorite.image.attached? %>
        <%= image_tag favorite.image.variant(resize_to_limit: [200, 200]) %>
      <% end %></td>
    </tr>
  <% end %>
  </ul>
  </body>
</table>