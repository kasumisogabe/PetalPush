<%= stylesheet_link_tag 'users' %>

<div class="detail-container">
  <div class="detail-item">
    <div class="image-info">
      <h1><%= @user.name %>さんのページ</h1>

      <p>メールアドレス: <%= @user.email %></p>

      <div class="actions">
        <%= link_to "一覧画面へ", flowers_path, class: "submit-button" %>
        <%= link_to 'お気に入り一覧', favorites_path, class: "submit-button" %>
        <% if @user == current_user %>
          <%= link_to "プロフィールの編集", edit_user_path, class: "submit-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>